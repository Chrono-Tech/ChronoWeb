footer.footer
  .wrap
    a(href="#body").footer__scrolltop.js-scrollto
    .footer__block.footer__block_logo
      .footer__logo-block
        .footer__logo #[span.footer__logo-color Chrono]bank.io
        .footer__beta beta 10.0
      ul.footer__download
        li #[a(href="#") Download] Business outline
        li #[a(href="#") Download] Development plan
        li #[a(href="#") Download] White paper
    .footer__block.footer__block_nav
      h4.footer__title MENU
      nav.footer__nav
        each item in ["ChronoMint", "LaborX", "Team"]
          a(href="#")= item
        a(href="#" target="_blank") FAQ
        a(href="https://medium.com/@Chronobank" target="_blank") Blog
        a(href="#") Contacts
    .footer__section
      .footer__block.footer__block_contacts
        h4.footer__title contacts us
        dl.footer__contacts
          dt Technical support: 
          dd 
            a(href="mailto:support@chronobank.io") support@chronobank.io
          dt General inquiries:
          dd 
            a(href="mailto:info@chronobank.io") info@chronobank.io
      .footer__block.footer__block_social
        h4.footer__title social network
        nav.footer__social
          a(href="https://www.facebook.com/ChronoBank.io" target="_blank")
            +svg('footer__i', 'facebook')
          a(href="https://twitter.com/ChronobankNews" target="_blank")
            +svg('footer__i', 'twitter')
          a(href="https://www.instagram.com/chronobank.io/" target="_blank")
            +svg('footer__i', 'instagram')
          a(href="https://www.reddit.com/r/ChronoBank/" target="_blank")
            +svg('footer__i', 'reddit')
          a(href="https://chronobank.herokuapp.com/" target="_blank")
            +svg('footer__i', 'slack')
          a(href="https://telegram.me/chronobank" target="_blank")
            +svg('footer__i', 'telegram')
          a(href="https://github.com/ChronoBank" target="_blank")
            +svg('footer__i', 'github')
    .footer__section
      .footer__block.footer__block_downloads
        h4.footer__title Download
        ul.footer__links
          a(href="#" target="_blank")
            +svg('footer__i', 'download-icon')
            span Desktop App for macOS
          a(href="#" target="_blank")
            +svg('footer__i', 'download-icon')
            span Desktop App for Windows
      form(action="" name="subscribe").footer__subscribe.js-validate
        h4.footer__title newsletter
        .field__block
          input(type="email" placeholder="Enter email for news" required).field
        .button__container
          input(type="submit" value="subscribe").button_sec
